{% extends 'base.html.twig' %}

{% block body %}

    
    <div class="container">
        <div class="panel panel-default">
          <div class="panel-heading">Logowanie:</div>
          <div class="panel-body">
            {% if error %}
                <div class="alert alert-dismissible alert-danger">
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
            {% endif %}

            <form action="{{ path('login') }}" method="post" class="form-horizontal">

                <fieldset>
                    <div class="form-group">
                        <label for="username" class="col-lg-2 control-label">Nazwa użytkownika:</label>
                        <div class="col-lg-10">
                            <input type="text" id="username" class="form-control input-sm" name="_username" value="{{ last_username }}" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="password">Hasło:</label>
                        <div class="col-lg-10">
                            <input type="password" class="form-control input-sm" id="password" name="_password" />
                        </div>
                    </div>

                        {#
                            If you want to control the URL the user
                            is redirected to on success (more details below)
                            <input type="hidden" name="_target_path" value="/account" />
                        #}
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-success">login</button>
                        </div>
                    </div>
                </fieldset>

            </form>
          </div>
        </div>
    </div>

{% endblock %}