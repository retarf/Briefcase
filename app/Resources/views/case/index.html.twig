{% extends 'base.html.twig' %}
{% block body %}

	
	<div class="container">

		<div style="float: right">

			<a href="add" class="btn btn-success"> Dodaj </a>
		</div>
		<div style="clear:both"></div>


		<table class="table table-striped table-hover ">
		  <thead>
		    <tr>
		      <th>#</th>
		      <th>Nazwa sprawy</th>
		      <th>Numer</th>
		      <th>Firma</th>
		      <th>Numer sprawy sÄ…dowej</th>
		    </tr>
		  </thead>
		  <tbody>
		  	{% set i = 0 %}
			{% for case in cases %}
				{% set i = i + 1 %}
				    <tr class="active clickable-row" style="cursor: pointer" onclick="getElementById('edit-{{ case.id }}').click()"  >
							<a href="{{ case.id }}" id="edit-{{ case.id }}"><td>{{ i }}</td>
							<td>{{ case.name }}</td>
							<td>{{ case.number }}</td>
							<td>{{ case.company.name }}</td>
							<td>{{ case.courtCaseNumber }}</td>
				    </tr>
			{% endfor %}

		  </tbody>
		</table> 	

	</div>

{% endblock %}